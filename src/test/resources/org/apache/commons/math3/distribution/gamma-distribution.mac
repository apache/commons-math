out :  openw("gamma-distribution-shape-100.csv");
x : float(append(makelist(i / 32, i, 1, 32 * 3), makelist(i + 3, i, 1, 297)));
y : p(bfloat(x), 100, 1);
printf(out, "璎棹", join(x, y));
close(out);

out :  openw("gamma-distribution-shape-142.csv");
